{
  "expo": {
    "name": "TaskTuner",
    "slug": "tasktuner-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "scheme": "tasktuner",
    "assetBundlePatterns": [
      "**/*"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      },
      "clerkPublishableKey": "${EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY}",
      "apiBaseUrl": "${EXPO_PUBLIC_API_BASE_URL}",
      "router": {
        "origin": false
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tasktuner.app",
      "buildNumber": "1.0.0",
      "associatedDomains": [
        "applinks:your-app.botics.co"
      ],
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for quick task creation.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for voice input to create tasks.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to convert voice to text for task creation.",
        "NSCalendarsUsageDescription": "This app needs access to your calendar to schedule tasks and events."
      }
    },
    "android": {
      "package": "com.tasktuner.app",
      "versionCode": 1,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "your-app.botics.co",
              "pathPrefix": "/"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR",
        "android.permission.RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/Tasktuner_logo.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ],
      [
        "expo-calendar",
        {
          "calendarPermission": "Allow TaskTuner to access your calendar to schedule tasks and events."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow TaskTuner to access your microphone for voice input."
        }
      ]
    ],
    "updates": {
      "enabled": false
    }
  }
}